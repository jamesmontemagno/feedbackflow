@if (!string.IsNullOrEmpty(ShowWhenSource))
{
    <button class="btn btn-primary btn-lg w-100 mt-3 source-button action-btn" @onclick="OnSubmit" disabled="@IsLoading">
        @if (IsLoading)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            <span>Processing...</span>
        }
        else
        {
            <span>@ButtonText</span>
        }
    </button>
}

@code {
    [Parameter]
    public string ShowWhenSource { get; set; } = "";

    [Parameter]
    public string ButtonText { get; set; } = "Analyze Comments";

    [Parameter]
    public bool IsLoading { get; set; }
    
    [Parameter]
    public EventCallback OnSubmit { get; set; }
}