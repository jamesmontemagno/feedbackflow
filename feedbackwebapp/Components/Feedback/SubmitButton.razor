@if (!string.IsNullOrEmpty(ShowWhenSource))
{
    <button class="btn btn-primary btn-lg w-100 mt-3 source-button action-btn" 
            @onclick="OnSubmit" 
            disabled="@IsLoading"
            aria-busy="@IsLoading"
            aria-label="@(IsLoading ? "Processing" : "Analyze Comments")">
        @if (IsLoading)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            <span>Processing...</span>
        }
        else
        {
            <span>Analyze Comments</span>
        }
    </button>
}

@code {
    [Parameter]
    public string ShowWhenSource { get; set; } = "";


    [Parameter]
    public bool IsLoading { get; set; }
    

    [Parameter]
    public EventCallback OnSubmit { get; set; }
}