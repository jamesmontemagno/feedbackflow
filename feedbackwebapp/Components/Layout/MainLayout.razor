@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<div class="page d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container">
            <div class="navbar-nav me-3 d-lg-none">
                <div class="nav-item dropdown">
                    <button class="nav-link dropdown-toggle btn btn-link p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item @(IsActive("/") ? "active" : "")" href="/">
                            <i class="bi bi-chat-dots me-2"></i>
                            Analyze
                        </a></li>
                        <li><a class="dropdown-item @(IsActive("/content-feeds") ? "active" : "")" href="/content-feeds">
                            <i class="bi bi-collection me-2"></i>
                            Feeds
                        </a></li>
                        <li><a class="dropdown-item @(IsActive("/reports") ? "active" : "")" href="/reports">
                            <i class="bi bi-graph-up me-2"></i>
                            Reports
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item @(IsActive("/history") ? "active" : "")" href="/history">
                            <i class="bi bi-clock-history me-2"></i>
                            Saved
                        </a></li>
                        <li><a class="dropdown-item @(IsActive("/whats-new") ? "active" : "")" href="/whats-new">
                            <i class="bi bi-stars me-2"></i>
                            What's New
                        </a></li>
                        <li><a class="dropdown-item @(IsActive("/settings") ? "active" : "")" href="/settings">
                            <i class="bi bi-gear me-2"></i>
                            Settings
                        </a></li>
                    </ul>
                </div>
            </div>
            <a href="/" class="navbar-brand d-flex align-items-center">
                <img src="logo-feedbackflow.svg" alt="FeedbackFlow Logo" width="36" height="36" class="me-2" style="filter: brightness(0) invert(1);" />
                <span>FeedbackFlow</span>
            </a>
            <button class="navbar-toggler d-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>            
            <div class="collapse navbar-collapse d-none d-lg-block" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/") ? "active" : "")" href="/">
                            <i class="bi bi-chat-dots me-1"></i>
                            Analyze
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/content-feeds") ? "active" : "")" href="/content-feeds">
                            <i class="bi bi-collection me-1"></i>
                            Feeds
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/reports") ? "active" : "")" href="/reports">
                            <i class="bi bi-graph-up me-1"></i>
                            Reports
                        </a>
                    </li>                    
                    @* Original implementation commented out for reference
                    Previous dropdown and mobile implementation removed - see /docs/navigation-layout.md for details
                    *@

                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/history") ? "active" : "")" href="/history">
                            <i class="bi bi-clock-history me-1"></i>
                            <span>Saved</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/whats-new") ? "active" : "")" href="/whats-new">
                            <i class="bi bi-stars me-1"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsActive("/settings") ? "active" : "")" href="/settings">
                            <i class="bi bi-gear me-1"></i>
                        </a>
                    </li>
                </ul>
            </div>            
            <div class="ms-auto">
                <ThemeToggle />
            </div>
        </div>
    </nav>    
    <main class="container-fluid pb-4 flex-grow-1">
        @Body
    </main>
    
    <Footer />
    <ToastNotification />
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try 
            {
                await JSRuntime.InvokeVoidAsync("initTheme");
            }
            catch
            {
                // Silently ignore any JavaScript errors
            }
        }
    }

    private bool IsActive(string path) => 
        NavigationManager.Uri.EndsWith(path, StringComparison.OrdinalIgnoreCase);
}
