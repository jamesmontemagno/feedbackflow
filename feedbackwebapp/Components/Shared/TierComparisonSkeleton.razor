@namespace FeedbackWebApp.Components.Shared

<div class="tier-comparison">
    <div class="tier-grid">
        @for (int i = 0; i < 3; i++)
        {
            <div class="tier-card">
                <div class="tier-header">
                    <!-- Tier name skeleton -->
                    <div class="skeleton skeleton-block" style="height: 24px; width: 80%; margin-bottom: 0.5rem;"></div>
                    <!-- Price skeleton -->
                    <div class="skeleton skeleton-block" style="height: 20px; width: 60%; margin-bottom: 0.75rem;"></div>
                </div>
                
                <!-- Description skeleton -->
                <div class="skeleton skeleton-block" style="height: 16px; width: 100%; margin-bottom: 1rem;"></div>
                
                <div class="tier-limits">
                    <!-- Limits header skeleton -->
                    <div class="skeleton skeleton-block" style="height: 18px; width: 50%; margin-bottom: 0.75rem;"></div>
                    
                    <!-- Limits list skeleton -->
                    @for (int j = 0; j < 4; j++)
                    {
                        <div class="d-flex align-items-center mb-2">
                            <div class="skeleton skeleton-circle" style="width: 16px; height: 16px; margin-right: 0.5rem;"></div>
                            <div class="skeleton skeleton-block" style="height: 16px; width: 85%;"></div>
                        </div>
                    }
                </div>
                
                <!-- Button skeleton -->
                <div class="skeleton skeleton-block" style="height: 38px; width: 100%; margin-top: 1rem;"></div>
            </div>
        }
    </div>
</div>