@namespace FeedbackWebApp.Components.Shared

<div class="modal fade show d-block" tabindex="-1" role="dialog" aria-labelledby="accountDeletedModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="accountDeletedModalLabel">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    Account Successfully Deleted
                </h5>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h6 class="mb-3">Your account has been permanently deleted</h6>
                <p class="text-muted mb-3">
                    All your data has been successfully removed from our system, including:
                </p>
                <ul class="text-start text-muted mb-4">
                    <li>Your account information</li>
                    <li>All shared analyses</li>
                    <li>Report requests and data</li>
                    <li>Usage history and preferences</li>
                </ul>
                <p class="text-muted small">
                    You will be logged out automatically in a few seconds.
                </p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success" @onclick="OnLogoutNow">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    Logout Now
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>

@code {
    [Parameter] public EventCallback OnLogoutNow { get; set; }
}
