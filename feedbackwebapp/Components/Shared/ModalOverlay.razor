@* ModalOverlay.razor *@

@if (IsVisible)
{
    <div class="modal-overlay">
        <div class="modal-content" role="alertdialog" aria-modal="true">
            <div class="spinner"></div>
            <p>@(Message ?? "Processing...")</p>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string? Message { get; set; }
}
