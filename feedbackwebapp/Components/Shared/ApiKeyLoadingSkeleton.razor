@namespace FeedbackWebApp.Components.Shared

<div class="card border-light">
    <div class="card-body p-3">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div style="flex: 1;">
                <div class="skeleton skeleton-text" style="width: 30%; height: 1rem; margin-bottom: 0.5rem;"></div>
                <div class="skeleton skeleton-text" style="width: 70%; height: 0.8rem;"></div>
            </div>
            <div class="skeleton skeleton-text" style="width: 60px; height: 1.5rem;"></div>
        </div>
        <div class="mb-3">
            <div class="skeleton skeleton-text" style="width: 100%; height: 2.5rem; border-radius: 4px;"></div>
        </div>
        <div class="d-flex gap-2">
            <div class="skeleton skeleton-text" style="width: 80px; height: 2rem; border-radius: 4px;"></div>
            <div class="skeleton skeleton-text" style="width: 90px; height: 2rem; border-radius: 4px;"></div>
        </div>
    </div>
</div>