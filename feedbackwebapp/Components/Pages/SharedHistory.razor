@page "/shared-history"
@inject FeedbackWebApp.Services.Interfaces.IAnalysisSharingService SharingService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@using SharedDump.Models
@using Microsoft.JSInterop
@inject FeedbackWebApp.Services.IToastService ToastService

<PageTitle>Shared Analysis History</PageTitle>

<div class="container-lg py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="shared-history-title mb-0">Shared Analysis History</h1>
    </div>

    @if (sharedItems is null)
    {
        <div class="loading-state">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading shared history...</p>
        </div>
    }
    else if (!sharedItems.Any())
    {
        <div class="empty-state">
            <i class="bi bi-share"></i>
            <p>No shared analysis history found.</p>
            <p class="text-muted">When you share analyses, they'll appear here.</p>
        </div>
    }    
    else
    {
        <div class="list-group">
            @foreach (var item in sharedItems)
            {
                <div class="list-group-item" @key="item.Id">
                <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi @GetServiceIcon(item.SourceType) service-icon"></i>
                            <span class="source-badge">@item.SourceType</span>
                            <small class="text-muted">Shared on @item.SharedDate.ToLocalTime().ToString("g")</small>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-outline-primary action-btn" title="Copy Share Link" @onclick="() => CopyShareLink(item)">
                                <i class="bi bi-clipboard"></i>
                            </button>
                            <a class="btn btn-sm btn-outline-info action-btn" title="Open Shared Analysis" href="@GetShareLink(item.Id)">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<SharedAnalysisRecord>? sharedItems;

    protected override async Task OnInitializedAsync()
    {
        await LoadSharedHistoryAsync();
    }

    private async Task LoadSharedHistoryAsync()
    {
        sharedItems = await SharingService.GetSharedAnalysisHistoryAsync();
    }

    private string GetServiceIcon(string sourceType)
    {
        return sourceType?.ToLowerInvariant() switch
        {
            "youtube" => "bi-youtube",
            "github" => "bi-github",
            "reddit" => "bi-reddit",
            "twitter" => "bi-twitter",
            "hackernews" => "bi-braces",
            "devblogs" => "bi-journal-code",
            "manual" => "bi-pencil-square",
            _ => "bi-question-circle"
        };
    }

    private string GetShareLink(string id)
    {
        var baseUrl = NavigationManager.BaseUri.TrimEnd('/');
        return $"{baseUrl}/shared/{id}";
    }

    private async Task CopyShareLink(SharedAnalysisRecord item)
    {
        var shareUrl = GetShareLink(item.Id);
        
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", shareUrl);
        await ToastService.ShowSuccessAsync("Share link copied to clipboard", 3000);
    }
}